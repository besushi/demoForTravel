<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">



    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layoutDirection="rtl"
                  android:layout_alignParentRight="true"
                  android:layout_marginTop="60dp"
                  android:gravity="center_horizontal">




        <LinearLayout   android:id="@+id/spinner_zone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">


            <TextView
                    android:id="@+id/msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:padding="20dp"/>

            <Spinner
                    android:id="@+id/spinner_sample"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />


        </LinearLayout>

        <LinearLayout   android:id="@+id/spinner_zone2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">


            <TextView
                    android:id="@+id/msg2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:padding="20dp"/>

            <Spinner
                    android:id="@+id/spinner_sample2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
            />

        </LinearLayout>






        <EditText
                android:id="@+id/calendar_btn"
                android:gravity="center"
                android:cursorVisible="false"
                android:focusable="false"
                android:layout_below="@+id/spinner_zone" android:layout_height="wrap_content" android:layout_width="wrap_content"/>

        <Button
                android:text="@string/show_selections"
                android:id="@+id/show_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/calendar_btn"/>

    </LinearLayout>

</RelativeLayout>